#!/bin/bash

tests=(	"0+#-' "       		"1111110-1E"
        ""			"0000000-1E"
        "h"			"0000000-1hE"
        "hz"			"0000000-1hE"
        "5%"			"0000005-1%"
        ".0%"			"00000000%"
	" "			"0000010-1E"
	"#0 ##" 		"1010010-1E"
	"0+-ri" 		"1101000-1E"	
	"0+-10.10" 		"1101001010E"
	"0+-0102n.10" 		"110100102-1E"
	"0+-01.2d" 		"11010012d"
	"0+-010.10D" 		"1101001010D"
	"0+-010.1060osdfgx" 	"110100101060o"
	"0+-0q" 		"1101000-1E"
	"0+-010hhd" 		"11010010-1hhd"
	"0+-0.23qdhhq" 		"110100023E"
	"0+-0.23dh" 		"110100023d"
        "0+-0.23j" 		"110100023jE"
        "0+-0.23z" 		"110100023zE"
        "0+-0.23jjz" 		"110100023jE"
        "0+-0.23jx" 		"110100023jx"
        "0#.x"			"10100000x"
        ".2s" 			"00000002s"
      )

function cmp
{
    echo -n `tput setaf 7`
    diff <(eval $1) <(echo -n $2)
    if [ $? == 1 ]; then
	echo `tput setaf 6`KO
    else
	echo `tput setaf 2`OK
    fi
    echo  $3
}

for i in $(seq 0 2 $((${#tests[@]} - 1))); do
    cmp "../parser \"${tests[$i]}\"" ${tests[$(($i + 1))]} ${tests[$i]}
done

