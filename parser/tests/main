#!/bin/bash

tests=(	"0+#-' "       		"111111000"
	" "			"000001000"
	"#0 ##" 		"101001000"
	"0+-ri" 		"11010000r"	
	"0+-10.10" 		"11010010100"
	"0+-0102n.10" 		"1101001020n"
	"0+-01.2d" 		"11010012d"
	"0+-010.10D" 		"1101001010D"
	"0+-010.1060osdfgx" 	"110100101060o"
	"0+-0q" 		"11010000q"
	"0+-010q" 		"110100100q"
	"0+-0.23q" 		"110100023q"
      )

function cmp
{
    echo `tput setaf 7`
    diff <(eval $1) <(echo -n $2)
    if [ $? == 1 ]; then
	echo `tput setaf 9` KO
    else
	echo `tput setaf 2` OK
    fi
    echo  $3
}

for i in $(seq 0 2 $((${#tests[@]} - 1))); do
    cmp "../parser \"${tests[$i]}\"" ${tests[$(($i + 1))]} ${tests[$i]}
done

